import calendar 
class doctors:
    def _init_(self,name,degree,time,holiday,lecture,operation):
        self.name= name
        self.degree= degree
        self.time= time
        self.holiday= holiday
        self.lecture= lecture
        self.operation= operation
class patients:
    def _init_(self,name,age,case,case_severity,pref_time=0,pref_day=0):
        self.name=name
        self.age= age
        self.case=case
        self.case_severity=case_severity
        self.pref_time=pref_time
        self.pref_day=pref_day
